<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?backgroundColor"
    tools:context=".details.NoteDetailsFragment"
    >

  <TextView
      android:id="@+id/noteTitleTextView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textAlignment="viewStart"
      android:layout_marginVertical="@dimen/spacing_1x"
      android:layout_marginHorizontal="@dimen/spacing_2x"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
      tools:text="My Android note"
      />

  <TextView
      android:id="@+id/noteCategoryTextView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textAlignment="viewStart"
      android:layout_marginVertical="@dimen/spacing_1x"
      android:layout_marginHorizontal="@dimen/spacing_2x"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/noteTitleTextView"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
      tools:text="Tooling"
      />

  <TextView
      android:id="@+id/noteContentTextView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textAlignment="viewStart"
      android:layout_marginVertical="@dimen/spacing_1x"
      android:layout_marginHorizontal="@dimen/spacing_2x"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/noteCategoryTextView"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
      tools:text="Android is a complex subject.  It can take a lot of work to learn"
      />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/uploadButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:clickable="true"
      android:src="@drawable/ic_baseline_cloud_upload_24"
      app:backgroundTint="?attr/colorSecondary"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />

  <ImageView
      android:id="@+id/noteImageView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginBottom="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/noteContentTextView"
      />

</androidx.constraintlayout.widget.ConstraintLayout>